<h1>つぶやき一覧</h1>
  <img src="assets/new.jpeg" class="image_area">
  
  

<p><%= notice %></p>

<table>
    <th>内容</th>

<% @blogs.each do |blog| %>
  <tr>
    <td><%= blog.content %></td>
    <td class="confirm_btn"><%= link_to '詳細を確認する', blog_path(blog.id) %></td>
    <td class="edit_btn"><%= link_to "つぶやきを編集する", edit_blog_path(blog.id) %></td>
    <td class="delete_btn"><%= link_to 'つぶやきを削除する', blog_path(blog.id), method: :delete ,data: { confirm: '本当に削除していいですか？' } %></td>
  </tr>
<% end %>
</table>

<br>

<%= link_to '新しくつぶやく', new_blog_path %>